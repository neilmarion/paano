<%= form_for current_user ? current_user.answers.new : Answer.new, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group" id="answer_form">
    <div class="controls">
      <%= f.text_area :content, :class=> 'text_field new_answer', placeholder: t('.answer') %>  
      <%= f.hidden_field :post_id, value: @question.id %>
    </div>
  </div>
  <%= render 'submit', f: f %>
<% end %>
