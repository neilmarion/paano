<div class="post_controls">
  <span class="post_control">
    <%= link_to '', remote: true, class: 'preview_expand' do %>
      <i class="icon-plus"></i>
      <%= t('.expand') %>      
    <% end %>
    <%= link_to '', remote: true, class: 'preview_collapse' do %>
      <i class="icon-minus"></i>
      <%= t('.collapse') %>      
    <% end %>
  </span>
  <span class="post_control">
    <%= link_to '#' do %>
      <i class="icon-share"></i>
      <%= t('.share') %>      
    <% end %>
  </span>
  <span class="post_control">
    <%= link_to '#' do %>
      <i class="icon-chevron-up"></i>
      <%= t('.vote-up') %>      
    <% end %>
  </span>
  <span class="post_control">
    <%= link_to '#' do %>
      <i class="icon-chevron-down"></i>
      <%= t('.vote-down') %>      
    <% end %>
  </span>
</div>

<div class="post_controls_hide">

</div>
