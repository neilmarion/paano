<% if current_user && current_user.own_post?(post) %>
  <div class="post_controls">
    <span class="post_control">
      <%= link_to '#', class: 'edit' do %>
        <i class="icon-pencil"></i>
        <%= t('.edit') %>          
      <% end %>
    </span>
    <span class="post_control">
      <%= link_to '#', class: post.class == Answer ? "fb-share-questions-a" : "fb-share-questions-q" do %>
        <i class="icon-share"></i>
        <%= t('.share') %>    
      <% end %>
    </span>
    <% if post.class == Question%>
      <span class="post_control">
        <%= link_to post, :confirm => t('.delete_question_confirm'), :method => :delete do %>
          <i class="icon-remove-circle"></i>
          <%= t('.delete') %>    
        <% end %>
      </span>
    <% elsif post.class == Answer %>
      <span class="post_control">
        <%= link_to post, :confirm => t('.delete_answer_confirm'), :method => :delete, :class => 'remove-answer' do %>
          <i class="icon-remove-circle"></i>
          <%= t('.delete') %>    
        <% end %>
      </span>
    <% end %>

  </div>
<% else %>
  <div class="post_controls">
    <span class="post_control">
      <%= link_to '#', class: post.class == Answer ? "fb-share-questions-a" : "fb-share-questions-q" do %>
        <i class="icon-share"></i>
        <%= t('.share') %>    
      <% end %>
    </span>
  </div>
<% end %>

<div class="post_controls_hide">

</div>
