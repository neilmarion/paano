<%= form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field', placeholder: t('.title') %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.text_area :content, :class => 'text_field new_question', :id => 'question_content', placeholder: t('.content') %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.autocomplete_field :tag_list, autocomplete_tag_name_posts_path, :"data-delimiter" => ', ', :class => 'text_field', placeholder: t('.tags') %> 
    </div>
  </div>
  <% if @question.new_record? %>
    <%= render 'submit', f: f %>
  <% else %>
    <%= render 'update_submit', f: f %>
  <% end %>
<% end %>
