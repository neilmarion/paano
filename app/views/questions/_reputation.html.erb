<div class="reputation_with_vote_links">
  <div class="vote-lnk">
    <%= link_to vote_up_questions_path(post), remote: true, class: "vote-up" do %>
      <div class="icon-chevron-up-div">
        <i class="icon-chevron-up"></i>
      </div>
    <% end %>
  </div>
  <div class="vote-count">
    <%= post.class.name == Question.name ? post.reputation_for(:question_votes).to_i : 
      post.reputation_for(:answer_votes).to_i %>
  </div>
  <div class="vote-lnk">
    <%= link_to vote_down_questions_path(post), remote: true, class: "vote-up" do %>
      <div class="icon-chevron-up-div">
        <i class="icon-chevron-down"></i>
      </div>
    <% end %>
  </div>
</div>
