@import "twitter/bootstrap/bootstrap";
body { padding-top: 60px; }
@import "twitter/bootstrap/responsive";

// Set the correct sprite paths
@iconSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings.png");
@iconWhiteSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings-white.png");

// Set the Font Awesome (Font Awesome is default. You can disable by commenting below lines)
// Note: If you use asset_path() here, your compiled bootstrap_and_overrides.css will not
//       have the proper paths. So for now we use the absolute path.
@fontAwesomeEotPath: asset-path("fontawesome-webfont.eot?v=3.0.2");
@fontAwesomeEotPath_iefix: asset-path("fontawesome-webfont.eot?#iefix&v=3.0.2");
@fontAwesomeWoffPath: asset-path("fontawesome-webfont.woff?v=3.0.2");
@fontAwesomeTtfPath: asset-path("fontawesome-webfont.ttf?v=3.0.2");

// Font Awesome
@import "fontawesome";
// Glyphicons
@import "twitter/bootstrap/sprites.less";
@import "vars.css.less.erb";

//customs

.btn-facebook {
  background-color: hsl(225, 48%, 39%) !important;
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#334b93", endColorstr="#334b93");
  background-image: -khtml-gradient(linear, left top, left bottom, from(#334b93), to(#334b93));
  background-image: -moz-linear-gradient(top, #334b93, #334b93);
  background-image: -ms-linear-gradient(top, #334b93, #334b93);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #334b93), color-stop(100%, #334b93));
  background-image: -webkit-linear-gradient(top, #334b93, #334b93);
  background-image: -o-linear-gradient(top, #334b93, #334b93);
  background-image: linear-gradient(#334b93, #334b93);
  border-color: #334b93 #334b93 hsl(225, 48%, 39%);
  color: #fff !important;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.00);
  -webkit-font-smoothing: antialiased;
}

//bootstrap overrides

.form-horizontal .form-actions{
  background-color: @white;
  border-top: none;
  padding-left: 0px;
}

.text_field{
  width: 100%;
  border-radius: 0px;
}

textarea{
  resize: vertical;
  height: 100px;
}

input[type="text"]{
  border-radius: 0px;
}

.form-horizontal .controls{
  margin-left: 0px;
}

.navbar-fixed-top .navbar-inner{
  padding: 5px 0px 5px 0px;
}

.navbar .btn{
  margin-top: 0px;
}

.navbar .nav li a{
  padding: 4px 15px 0px;
  text-shadow: none;
}

.navbar .nav li a.user-link{
  padding-bottom: 3px; 
}

//scrollbar

html {
  overflow-y: scroll; 
}

//navbar
.navbar .brand {
  padding: 0px 0px 0px 175px;
  opacity: 0.5;
  -o-transition: @transition_time; 
  -ms-transition: @transition_time; 
  -moz-transition: @transition_time; 
  -webkit-transition: @transition_time; 
  transition: @transition_time; 
}

.navbar .brand:hover{
  opacity: 1;
}

.navbar-inner { 
  background: @almost-black; 
  padding-top: 10px; 
  border: none; 
  min-height: 30px; 
} 
 
.navbar a{ 
  font-weight: bold; 
  
} 
 
.navbar a:hover{ 
  text-decoration: none; 
  color: @white; 
}


.navbar .nav li.dropdown.open .dropdown-toggle{
  background-color: transparent;
  color: @white;
}

//sidebar

.left li a:hover {
  background-color: @light-grey;
}

.left li a { 
  padding: 8px 14px;
  display: block;
  border: 1px solid @light-grey; 
  margin: 0 0 -1px;
}

.left li:first-child a { 
  border-radius: 6px 6px 0 0;
}

//posts

.post-row td{ 
  padding: 0;
}

.post-title a{
  font-weight: bold;
}

.preview-div {
  color: #777;
  font-size: @smaller-text-size;;
}

.other-div {
  padding-top: 30px;
}

.reputation-span {
  color: @grey;
  font-size: 13px;
}

.reputation_with_vote_links{
  margin-top: 30px;
  text-align: center;
}

//questions

.answers{
  border-top: solid 1px @light-grey;
}

.answer{
  padding-top: 30px;
}

#answer_form{
  padding-top: 100px;
}

.voted-up a{
  color: @dark-green;
}

.voted-down a{
  color: @dark-red;
}

.vote-lnk, .voted-up, .voted-down{
  text-align: center;
  font-size: 30px;
  padding: 0 0 20px;
}

.vote-lnk a{
  color: @grey;
}

.vote-lnk a:hover, .voted-up a:hover, .voted-down a:hover{
  text-decoration: none;
  color: @dark-grey;
}

.vote-count{
  text-align: center;
  font-size: 30px;
  padding: 0 0 20px;
}

//comments

.comments{
  margin-top: 30px;
  font-size: @smallest-text-size;
  padding: 0 0 50px;
}

.comment{
  padding: 10px 0px 40px;
  border-top: solid 1px @light-grey;
}

textarea.text_field.new_comment{
  height: 20px;
  font-size: @smallest-text-size; 
}

.comment_commenter{
  text-align: right;
}

//answers

.new_anwers{
  height: 100px;
}

//tags

.tag {
  font-size: @smallest-text-size;
}

.tags-div{
  padding-left: 10px;
}

//footer

footer .span8{
  border-top: solid 1px @light-grey;
  text-align: center;
}



.small-grey-text{
  color: @grey;
  font-size: @smallest-text-size;  
}
