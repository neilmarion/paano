//bootstrap overrides

.form-horizontal .form-actions{
  background-color: @white;
  border-top: none;
  padding-left: 0px;
}

.text_field{
  width: 100%;
  border-radius: 0px;
}

textarea{
  resize: vertical;
  height: 100px;
}

input[type="text"]{
  border-radius: 0px;
}

.form-horizontal .controls{
  margin-left: 0px;
}

.navbar-fixed-top .navbar-inner{
  padding: 5px 0px 5px 0px;
}

.navbar .btn{
  margin-top: 0px;
}

.navbar .nav li a{
  padding: 4px 15px 0px;
  text-shadow: none;
}

.navbar .nav li a.user-link{
  padding-bottom: 3px; 
}

//scrollbar

html {
  overflow-y: scroll; 
}

//navbar
.navbar .brand {
  padding: 0px 0px 0px 175px;
  opacity: 0.5;
  -o-transition: @transition_time; 
  -ms-transition: @transition_time; 
  -moz-transition: @transition_time; 
  -webkit-transition: @transition_time; 
  transition: @transition_time; 
}

.navbar .brand:hover{
  opacity: 1;
}

.navbar-inner { 
  background-image: url('pw_maze_black.png');
  background-repeat:repeat;
  padding-top: 10px; 
  border: none; 
  min-height: 30px; 
} 
 
.navbar a{ 
  font-weight: bold; 
  
} 
 
.navbar a:hover{ 
  text-decoration: none; 
  color: @white; 
}


.navbar .nav li.dropdown.open .dropdown-toggle{
  background-color: transparent;
  color: @white;
}

//sidebar

.left li a:hover {
  background-color: @light-grey;
}

.left li a, .users-links li a { 
  padding: 8px 14px;
  display: block;
  border: 1px solid @light-grey; 
  margin: 0 0 -1px;
}

.left li:first-child a { 
  border-radius: 6px 6px 0 0;
}

.users-links-container {
  padding-top: 36px;
}

.users-links li:last-child a{
  border-radius: 0 0 6px 6px;
}

//users

.user-cell{
  padding: 10px 10px 10px 10px;
  border: 1px solid @light-grey;
  display: inline-block;
  width: 40%;
}

.user-stats, .user-karma{
  color: @grey; 
  font-size: @smallest-text-size; 
}

.user-stats{
  text-align: right;
  padding-top: 4px;
}

.name{
  font-weight: bold;
}

.user_thumb_small{
  width: 60%;
}

.user_thumb_navbar_container{
  text-align: right;
}

.user_reputation{
  width: 20px;
  height: 20px;
  text-align: center;
  color: @white;
  padding: 3px 3px 3px 3px;
  margin-top: 2px;
  font-size: 10px;
}

//posts

.post-row td{ 
  padding: 0;
}

.post-title a{
  font-weight: bold;
}

.preview-div {
  color: #777;
  font-size: @smallest-text-size;
}

.other-div {
  padding-top: 10px;
}

.reputation-span {
  color: @grey;
  font-size: @smallest-text-size;
}

.reputation_with_vote_links{
  margin-top: 30px;
  text-align: center;
}

.post_controls{
  display:none;
  font-size: @smallest-text-size;
}

.post_controls_hide{
  padding-bottom: 20px; 
}

.post_control{
  padding: 0 10px 0 0;
}

.post_control a:hover{
 text-decoration: none; 
}

.preview-div.expanded{
  display: none;
}

.preview_collapse{
  display: none;
}

//questions

.answers{
  border-top: solid 1px @light-grey;
}

.answer{
  padding-top: 30px;
}

#answer_form{
  padding-top: 100px;
}

.voted-up a{
  color: @dark-green;
}

.voted-down a{
  color: @dark-red;
}

.vote-lnk, .voted-up, .voted-down{
  text-align: center;
  font-size: 30px;
  padding: 0 0 20px;
}

.vote-lnk a{
  color: @grey;
}

.vote-lnk a:hover, .voted-up a:hover, .voted-down a:hover{
  text-decoration: none;
  color: @dark-grey;
}

.vote-count{
  text-align: center;
  font-size: 30px;
  padding: 0 0 20px;
}

.icon-chevron-up-div{
  padding-right: 12px;
}

.edit-post{
  display:none;
}

.no-controls{
  padding-bottom: 20px;
}

//comments

.comments{
  margin-top: 30px;
  font-size: @smallest-text-size;
  padding: 0 0 10px;
}

.comment{
  padding: 10px 0px 10px;
  border-top: solid 1px @light-grey;
}

textarea.text_field.new_comment{
  height: 20px;
  font-size: @smallest-text-size; 
}

.comment_commenter{
  text-align: right;
}

//answers

.new_anwers{
  height: 100px;
}

//tags

.tag {
  font-size: @smallest-text-size;
}

.tags-div{
  padding-left: 10px;
}

//footer

footer .footer{
  border-top: solid 1px @light-grey;
  text-align: center;
}

.footer span{
  padding: 0 0px 0 10px;
}

.footer a{
  color: @grey;
}



.small-grey-text{
  color: @grey;
  font-size: @smallest-text-size;  
}

//login

#sign-in-text{
  text-align: center;
}

#sign-in-message{
  color: @white;
  font-size: 60px;;
  line-height: 72px;
  background-color:rgba(0,0,0,0.5);
  border-radius: 5px;
  padding: 25px 25px 25px 25px;
}

#sign-in-button{
  padding-top: 42px;
}

.login-footer{
  padding-top: 36px;
  font-size: 12px;
}
